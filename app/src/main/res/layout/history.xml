<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="history"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#ffff">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp">


            <TableRow
                android:id="@+id/date_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/date_background"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_span="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:text="@string/history_table_date"
                        android:textColor="#ffff"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/deleteButton"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/ic_trash_can"
                        android:text="@string/delete"
                        android:textColor="#ffff"
                        android:contentDescription="TODO" />


                </LinearLayout>


            </TableRow>


            <TableRow
                android:id="@+id/col_headings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:background="@drawable/textviewborders"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Entry_col"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewborder_side"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="5dp"
                    android:text="@string/entry"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/Duration_col"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="5dp"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/Distance_col"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewborder_side"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="5dp"
                    android:text="@string/Distance"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="12sp" />


            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:background="@drawable/textviewborders_no_top"
                android:orientation="horizontal"
                android:textColor="#ffff">

                <TextView
                    android:id="@+id/Entry_column"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/centerblockborder"
                    android:padding="5dp"
                    android:text="@string/_0"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/Duration_column"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/_00_00"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/Distance_column"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/centerblockborder"
                    android:padding="5dp"
                    android:text="@string/_0_00_km"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="14sp" />


            </TableRow>


        </TableLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>








