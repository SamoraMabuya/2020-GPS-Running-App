<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="history">


    <TableLayout
        android:id="@+id/historytable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:padding="1dp">


        <TableRow
            android:id="@+id/date_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/date_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_height"
                android:layout_span="3"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dateheading_marginStart"
                    android:padding="@dimen/dateheadingPadding"
                    android:text="@string/history_table_date"
                    android:textColor="#ffff"
                    android:textSize="@dimen/dateheadingtextsize" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="@dimen/del_btn_width"
                    android:layout_height="@dimen/del_btn_height"
                    android:layout_marginStart="@dimen/del_btn_marginStart"
                    android:layout_marginEnd="@dimen/del_btn_marginEnd"
                    android:src="@drawable/ic_trash_can"
                    android:text="@string/delete"
                    android:textColor="#ffff" />


            </LinearLayout>


        </TableRow>


        <TableRow
            android:id="@+id/col_headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tablerow_marginTop"
            android:background="@drawable/textviewborders"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Entry_col"
                android:layout_width="@dimen/entrycol_width"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewborder_side"
                android:fontFamily="@font/raleway_medium"
                android:padding="@dimen/entrycol_padding"
                android:text="@string/entry"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/entrycol_textSize" />


            <TextView
                android:id="@+id/Duration_col"
                android:layout_width="@dimen/durationcol_width"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:padding="@dimen/durationcol_padding"
                android:text="@string/time"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/durationcol_textSize" />

            <TextView
                android:id="@+id/Distance_col"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewborder_side"
                android:fontFamily="@font/raleway_medium"
                android:padding="@dimen/distancecol_padding"
                android:text="@string/Distance"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/distancecol_textSize" />


        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lowertable_marginTop"
            android:background="@drawable/textviewborders_no_top"
            android:orientation="horizontal"
            android:textColor="#ffff">

            <TextView
                android:id="@+id/Entry_column"
                android:layout_width="@dimen/entrycol_width"
                android:layout_height="wrap_content"
                android:background="@drawable/centerblockborder"
                android:padding="@dimen/entrycol_padding"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/entrycol_textSize14" />


            <TextView
                android:id="@+id/Duration_column"
                android:layout_width="@dimen/durationcol_width"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/_00_00"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/durationcol_textSize14" />

            <TextView
                android:id="@+id/Distance_column"
                android:layout_width="@dimen/distancecol_width"
                android:layout_height="wrap_content"
                android:background="@drawable/centerblockborder"
                android:padding="5dp"
                android:text="@string/_0_00_km"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/distancecol_textSize14" />


        </TableRow>


    </TableLayout>


</RelativeLayout>








